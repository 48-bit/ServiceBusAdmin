<li class="nav-item px-3">
    <NavLink class="nav-link" href="@TargetUrl" Match="@Match">
        <span class="oi @IconClass" aria-hidden="true"></span> @Text
    </NavLink>
</li>

@code
{
    [Parameter]
    public string TargetUrl { get; set; }

    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string IconClass { get; set; }

    [Parameter]
    public NavLinkMatch Match { get; set; }
}
